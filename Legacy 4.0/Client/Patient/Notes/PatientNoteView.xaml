                                </GridView>
                            </ListView.View>
                        </ListView>
                        <WrapPanel>
                            <Button x:Name="btnLogonsasaxxXcs" 
                                                Style="{DynamicResource AccentedSquareButtonStyle}"
                                                IsDefault="True" 
                                                Content="Add General Note" 
                                                Margin="5"
                                                TabIndex="3" Command="{Binding SearchCommand}" CommandParameter="Patient"/>
                        </WrapPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</UserControl>
